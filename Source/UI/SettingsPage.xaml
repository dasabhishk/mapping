<Page x:Class="CMMT.UI.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CMMT.UI"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="112*"/>
            <RowDefinition Height="169*"/>
        </Grid.RowDefinitions>
        <Grid Margin="40,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Reset Database Details GroupBox -->
            <GroupBox Grid.Row="0">
                <GroupBox.Header>
                    <TextBlock Text="Reset Migrated Rows For Staging" FontWeight="Bold" FontSize="14"/>
                </GroupBox.Header>
                <Border Padding="30">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="180"/>
                            <ColumnDefinition Width="*" MinWidth="350"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Staging Database List" x:Name="lblDatabaseList" Grid.Column="0" Margin="0,7,15,0" VerticalAlignment="Top"/>
                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
                            <ComboBox x:Name="cmbDatabaseName"
                                      MinWidth="250"
                                      Padding="6"
                                      Margin="0,0,10,0"
                                      Height="31"
                                      Width="225"
                                      SelectionChanged="cmbDatabaseName_SelectionChanged">
                                <ComboBoxItem>Please Select a database</ComboBoxItem>
                            </ComboBox>
                            <Button x:Name="btnResetMigration"
                                    Content="Reset Migrated Rows"
                                    Width="160"
                                    Padding="6"
                                    Height="31"
                                    IsEnabled="False"
                                    Click="btnResetMigration_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </GroupBox>
        </Grid>
    </Grid>
</Page>
